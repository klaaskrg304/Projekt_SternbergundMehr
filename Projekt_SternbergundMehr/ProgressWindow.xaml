<Window x:Class="Projekt_SternbergundMehr.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_SternbergundMehr"
        mc:Ignorable="d"
         Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar Name="progressBar"
                     Minimum="0" Maximum="100"
                     Height="30" Width="250"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top" Foreground="#FF287BC7" Margin="0,67,0,0"/>
        <Label Content="Einen Moment...." HorizontalAlignment="Center" Height="47" VerticalAlignment="Top" Width="196" FontSize="24" Foreground="#FF4A4949"/>
    </Grid>
</Window>
