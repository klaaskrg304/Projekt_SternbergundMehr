            <Border BorderBrush="Black" BorderThickness="0" Effect="{StaticResource DefaultShadow}" CornerRadius="15" Height="390" Width="1337" Background="White" Canvas.Top="142" Canvas.Left="96" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button
                Width="144" VerticalAlignment="Top" Style="{StaticResource SpecialButtonStyle_border}" x:Name="btn_search" Height="40" HorizontalAlignment="Left" Content="suchen" BorderThickness="2" BorderBrush="#FF287BC7" Background="White" Foreground="#FF287BC7" RenderTransformOrigin="0.472,2.25" Click="btn_search_Click" Margin="1137,36,0,0"/>
